<p id="notice"><%= notice %></p>

<h1>Listing Parts</h1>

<table>
  <thead>
    <tr>
      <th>Story</th>
      <th>Slug</th>
      <th>Title</th>
      <th>Body</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parts.each do |part| %>
      <tr>
        <td><%= part.story.title %></td>
        <td><%= part.slug %></td>
        <td><%= part.title %></td>
        <td><%= part.body %></td>
        <td><%= part.order %></td>
        <td><%= link_to 'Show', admin_story_part_path(id: part.story_id, part_id: part.id) %></td>
        <td><%= link_to 'Edit', edit_admin_story_part_path(id:part.story_id, part_id: part.id) %></td>
        <td><%= link_to 'Destroy', admin_story_part_path(id: part.story_id, part_id: part.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

